<div class="container my-5">
  <h1 class="mb-4">Sales List</h1>

  <%= link_to 'New Sale', new_sale_path, class: 'btn btn-primary mt-3' %>

  <table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
      <tr>
        <th>Book</th>
        <th>Year</th>
        <th>Sales</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.book&.name %></td>
          <td><%= sale.year %></td>
          <td><%= number_with_delimiter(sale.sales) %></td>
          <td><%= link_to 'Show', sale, class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_sale_path(sale), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @sales %>
</div>