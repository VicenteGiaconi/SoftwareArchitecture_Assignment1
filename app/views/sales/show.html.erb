<div class="container my-5">
  <h1 class="mb-4">Sale Details</h1>

  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title">Book: <%= @sale.book&.name %></h5>
      <p class="card-text"><strong>Year:</strong> <%= @sale.year %></p>
      <p class="card-text"><strong>Sales:</strong> <%= number_with_delimiter(@sale.sales) %></p>
    </div>
  </div>

  <%= link_to 'Edit', edit_sale_path(@sale), class: 'btn btn-warning' %>
  <%= link_to 'Back', sales_path, class: 'btn btn-secondary' %>
</div>