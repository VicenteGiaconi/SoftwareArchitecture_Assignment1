<div class="container my-5">
 
  <h1 class="mb-4">Review List</h1>

  <%= link_to 'New Review', new_review_path, class: 'btn btn-primary mt-3' %>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Book</th>
        <th>Rating</th>
        <th>Comment</th>
        <th>Created At</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.book.name if review.book %></td>
          <td><%= review.score %></td>
          <td><%= truncate(review.review, length: 50) %></td>
          <td><%= review.created_at.strftime("%B %d, %Y") %></td>
          <td><%= link_to 'Show', review, class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_review_path(review), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @reviews %>
</div>  