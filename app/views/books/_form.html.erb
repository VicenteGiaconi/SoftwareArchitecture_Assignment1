<%= form_with(model: book, local: true, html: { multipart: true }) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(book.errors.count, "error") %> prevented to save changes:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :author_id, "Author", class: 'form-label' %>
    <%= form.select :author_id, options_for_select(@authors.map { |a| [a.name, a.id] }, book.author_id), { prompt: 'Select Author' }, { class: 'form-select' } %>
  </div>

  <div class="mb-3">
    <%= form.label :summary, class: 'form-label' %>
    <%= form.text_area :summary, class: 'form-control', rows: 5 %>
  </div>

  <div class="mb-3">
    <%= form.label :date_of_publication, "Publishing Date", class: 'form-label' %>
    <%= form.date_field :date_of_publication, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :number_of_sales, "Sales", class: 'form-label' %>
    <%= form.number_field :number_of_sales, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :cover_image, "Cover Image", class: 'form-label' %>
    <%= form.file_field :cover_image, class: 'form-control' %>
    <% if book.cover_image.attached? %>
      <div class="mt-2">
        <%= image_tag book.cover_image, class: "img-thumbnail" %>
      </div>
    <% end %>
  </div>

  <div class="d-grid gap-2">
    <%= form.submit 'Save Changes', class: 'btn btn-primary' %>
    <%= link_to 'Back', books_path, class: 'btn btn-secondary' %>
  </div>
<% end %>