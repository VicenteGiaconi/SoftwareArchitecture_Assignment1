<div class="container my-5">
  <h1 class="mb-4">Book List</h1>

  <table class="table table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Summary</th>
        <th>Published in</th>
        <th>Sales</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author.name if book.author %></td>
          <td><%= truncate(book.summary, length: 50) %></td>
          <td><%= book.date_of_publication.year %></td>
          <td><%= number_with_delimiter(book.number_of_sales) %></td>
          <td><%= link_to 'Show', book, class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm' %></td>
          <td><%= button_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Book', new_book_path, class: 'btn btn-primary mt-3' %>
</div>