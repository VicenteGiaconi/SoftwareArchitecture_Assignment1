<div class="container my-5">
  <h1 class="mb-4"><%= @author.name %></h1>

  <% if @author.photo.attached? %>
    <div class="mb-3">
      <%= image_tag @author.photo, class: "img-thumbnail" %>
    </div>
  <% end %>

  <div class="card mb-3">
    <div class="card-body">
      <p class="card-text"><strong>Country of origin:</strong> <%= @author.country_of_origin %></p>
      <p class="card-text"><strong>Date of Birth:</strong> <%= @author.date_of_birth %></p>
      <p class="card-text"><strong>Description:</strong> <%= @author.short_description %></p>
    </div>
  </div>

  <h2 class="mt-5">Published Books</h2>
  <% if @author.books.any? %>
    <ul class="list-group">
      <% @author.books.each do |book| %>
        <li class="list-group-item"><%= link_to book.name, book %></li>
      <% end %>
    </ul>
  <% else %>
    <p>This author has no books.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to 'Edit', edit_author_path(@author), class: 'btn btn-warning' %>
    <%= link_to 'Go Back', authors_path, class: 'btn btn-secondary' %>
  </div>
</div>